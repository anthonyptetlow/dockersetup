    db_{{ db.type }}:
        image: {{ db.image }}
        container_name: db_{{ db.type }}
        {{ db.command is defined ? 'command: ' ~ db.command : '' }}
        ports:
            - {{ db.port }}:{{ db.port }}
        environment:
{% for key, value in db.environment %}
            {{ key }}: {{ value }}
{% endfor %}
        volumes:
            - {{ root_directory }}/{{ db.type }}:/var/lib/{{ db.type }}
        networks:
            - {{ docker.network }}
